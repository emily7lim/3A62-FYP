{% extends "layout.jinja2" %}

{% block content %}
<div class="col-md-2">
</div>

<div class="col-md-10">
    <div class="chat-bar-collapsible">
        <button id="chat-button" type="button" class="collapsible">FinancialRuler Chatbot
            <i id="chat-icon" style="color: black;" class="fa fa-fw fa-comments-o"></i>
        </button>

        <div class="content">
            <div class="full-chat-block">
                <!-- Message Container -->
                <div class="outer-container">
                    <div class="chat-container">
                        <!-- Messages -->
                        <div id="chatbox">
                            <div id="botStarterMessage" class="botText"><span>Loading...</span></div>
                    
                        </div>

                        <!-- User input box -->
                        <div class="chat-bar-input-block">
                            <div id="userInput">
                                <input id="textInput" class="input-box" type="text" name="msg"
                                    placeholder="Tap 'Enter' to send a message">
                                <p></p>
                            </div>

                            <div class="chat-bar-icons">
                                <i id="chat-icon" style="color: black;" class="fa fa-fw fa-send" onclick="sendButton()" type='button'></i>
                            </div>
                        </div>

                        <div id="chat-bar-bottom">
                            <p></p>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

{% endblock content %}